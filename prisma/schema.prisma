// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // หรือ "mysql", "sqlite", "sqlserver"
  url      = env("DATABASE_URL")
}

// Enum สำหรับ Roles
enum UserRole {
  EXECUTIVE
  DEPT_HEAD
  GROUP_HEAD
  OPERATOR
}

// Enum สำหรับประเภทงบประมาณ
enum BudgetType {
  EXPENSE
  INCOME
}

model User {
  id            String       @id @default(uuid())
  email         String       @unique
  name          String
  role          UserRole
  departmentId  String?
  department    Department?  @relation(fields: [departmentId], references: [id])
  providerId    String       @default("mockProviderId") // ตามที่คุณต้องการ
  varianceNotes VarianceNote[] // User ที่เขียน Note

  @@index([departmentId])
}

model Department {
  id            String         @id @default(uuid())
  name          String // "IT", "HR", "Finance"
  users         User[]
  expenses      ExpenseItem[]
  incomes       IncomeItem[]
  budgets       Budget[] // เป้าหมายของแผนก
  varianceNotes VarianceNote[] // Note ของแผนก
}

model ExpenseCategory {
  id      String        @id @default(uuid())
  name    String // "Software", "Hardware", "Services"
  items   ExpenseItem[]
  budgets Budget[] // เป้าหมายของกลุ่มงาน
}

// ข้อมูลรายจ่าย (L4 - ผลลัพธ์)
model ExpenseItem {
  id           String          @id @default(uuid())
  name         String // "WAF (Web Application Firewall)"
  details      String? // "AWS WAF / Cloudflare..."
  actualCost   Decimal
  date         DateTime // วันที่เกิดรายการ
  department   Department      @relation(fields: [departmentId], references: [id])
  departmentId String
  category     ExpenseCategory @relation(fields: [categoryId], references: [id])
  categoryId   String

  @@index([departmentId])
  @@index([categoryId])
  @@index([date])
}

// ข้อมูลรายรับ (L1 - ผลลัพธ์)
model IncomeItem {
  id           String     @id @default(uuid())
  name         String
  amount       Decimal
  date         DateTime // วันที่เกิดรายการ
  department   Department @relation(fields: [departmentId], references: [id])
  departmentId String

  @@index([departmentId])
  @@index([date])
}

// Model ใหม่: สำหรับเก็บเป้าหมาย (Target)
model Budget {
  id           String          @id @default(uuid())
  year         Int // ปีงบประมาณ (เช่น 2024 หมายถึง FY2568)
  month        Int // เดือน (1-12, โดย 10-12 คือ Q1)
  amount       Decimal // ยอดเป้าหมาย
  type         BudgetType // EXPENSE หรือ INCOME
  department   Department?     @relation(fields: [departmentId], references: [id])
  departmentId String? // Null = เป้าหมายรวมขององค์กร (L1)
  category     ExpenseCategory? @relation(fields: [categoryId], references: [id])
  categoryId   String? // Null = เป้าหมายรวมของแผนก (L2)

  @@index([year, month, type])
  @@index([departmentId])
  @@index([categoryId])
}

// Model ใหม่: สำหรับการวิเคราะห์สาเหตุ "ติดตรงไหน"
model VarianceNote {
  id           String     @id @default(uuid())
  year         Int // ปีงบประมาณ
  quarter      Int // ไตรมาสที่ (1, 2, 3, 4)
  note         String // "สาเหตุ: เกิดการจัดซื้อ Server ด่วนนอกแผนงาน..."
  department   Department @relation(fields: [departmentId], references: [id])
  departmentId String // Note นี้ผูกกับแผนกไหน
  author       User       @relation(fields: [authorUserId], references: [id])
  authorUserId String // ใครเป็นคนบันทึก Note
  createdAt    DateTime   @default(now())

  @@index([year, quarter])
  @@index([departmentId])
}
